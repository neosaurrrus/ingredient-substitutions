<h1>All Categories</h1>



<div class="category-card-container">


<% @categories.each do |category| %>
    <div class="category-card" style="background-image: url('../assets/meat.jpg')">
                <div class="category-card-info">
                <h3><%= link_to category.name, category_ingredients_path(category) %></h3>
                <p><%= category.description %></p>
                </div>
                
    </div>

<% end %>
</div>





