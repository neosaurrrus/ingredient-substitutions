 
    <%= form_for ([@category,@ingredient]) do |i| %>
     
        <%= i.hidden_field :user_id, :value => current_user.id %>
        
        <%= i.label :name %>
        <%= i.text_field :name %><br>
        <%= i.label :description %>
        <%= i.text_area :description %><br>
        <%= i.label :vegan %>
        <%= i.check_box :vegan %>
