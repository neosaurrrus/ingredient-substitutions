
<div class="big-card" style="background-image: url(<%= image_path("fruit.jpg") %>)">
    <div ></div>
    
<div class="big-card-text">
  <h1><em>Sign Up</em></h1>
      <p>Joining allows you to contribute your own ideas!</p>
    <br>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3 class="error-text">
        <%= pluralize(@user.errors.count, "error") %>
        prohibited your account from being created:
      </h3>
  
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

      <%= form_for @user do |f| %>
        <p>Username <%= f.text_field :username, required: true%></p>
        <p>Password <%= f.password_field :password, required: true %></p>
        <p>Confirm Password <%= f.password_field :password_confirmation, required: true %></p>
        
        <%= f.submit "Join Us!" %>
      <% end %>
      <br>
       <%= link_to image_tag("google-blue.png"), root_url + "auth/google_oauth2"%>
  </div>
</div>  






