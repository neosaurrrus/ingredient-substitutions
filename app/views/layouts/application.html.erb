<!DOCTYPE html>
<html>
  <head>
    <title>SwapChef</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <li class="logo"> <%= link_to "SwapChef", welcome_url %></li>

        <li> <%= link_to "View Categories", categories_url %></li>
        <li> <%= link_to "New Substitution", new_substitution_url if current_user%></li>
        <li> <%= link_to "Logout", logout_url , method:"delete" if current_user%></li>
         <li><% if current_user %>
                 <%= link_to current_user.username, user_url(current_user.id) %> 
               <% else %> 
                  <%=link_to "Signup / Login", new_session_url %>
               <% end %>   
        </li>
      </ul>
    </nav>

    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
